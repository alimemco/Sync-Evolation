<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_banner_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"

        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        tools:style="@style/CardView"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/standard_margin">

            <ImageView
                android:id="@+id/main_banner_image_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
               app:srcCompat="@drawable/ic_fiber_new_black_24dp"

                />


            <TextView
                android:id="@+id/main_banner_txt_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تخفیف 10 درصدی به کاربران طلایی"
                android:textColor="@color/new_news_green"
                android:textSize="@dimen/big_text_size"
                android:layout_toLeftOf="@id/main_banner_image_news"
                android:layout_alignTop="@id/main_banner_image_news"
                android:layout_alignBottom="@id/main_banner_image_news"
                android:gravity="center"
                android:layout_marginRight="@dimen/standard_margin"

                />



        </RelativeLayout>


    </android.support.v7.widget.CardView>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/standard_margin"
           >


            <ImageView
                android:id="@+id/main_banner_listvector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_list_black"

                />

            <TextView
                android:id="@+id/main_banner_title_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/main_banner_listvector"
                android:layout_alignTop="@id/main_banner_listvector"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_toLeftOf="@id/main_banner_listvector"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="لیست مطالب"
                android:textSize="@dimen/large_text_size" />

        </RelativeLayout>



</LinearLayout>