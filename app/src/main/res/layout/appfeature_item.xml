<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        android:layout_margin="@dimen/standard_margin"
        tools:style="@style/CardView"
        app:cardElevation="@dimen/cardElevation">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/feature_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@drawable/login"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/feature_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="عنوان هر آیتم"
                android:textSize="@dimen/large_text_size"
                android:layout_below="@id/feature_image_view"
                android:layout_alignRight="@id/feature_image_view"
                android:layout_alignLeft="@id/feature_image_view"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingBottom="@dimen/standard_margin"
                android:gravity="center"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>





</RelativeLayout>